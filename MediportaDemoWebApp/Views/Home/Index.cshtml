@model List<Tag>
@{
    ViewData["Title"] = "StackOverflow tags ranking";
}

<div class="text-center">
    <h1 class="display-4">StackOverflow tags ranking</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Usage count</th>
                <th scope="col">Percentage pupularity</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
            <tr>
                <th scope="row">@(i+1)</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Count</td>
                <td>@Model[i].Popularity.ToString("N3") %</td>
            </tr>
            }
        </tbody>
    </table>
</div>
